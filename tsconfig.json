{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",
        "lib": [
            "dom",
            "es2015",
            "es2016"
        ],
        "declaration": true,
        "sourceMap": true,
        "removeComments": true,
        "esModuleInterop":true
    },
    "exclude": [
        "node_modules",
        "vendor",
        "resources", 
        "examples"
    ],
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ]
}